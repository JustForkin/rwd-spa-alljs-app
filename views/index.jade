extends layout

block content
	// Vendor Libs: jQuery only used for Bootstrap functionality
	script(src='/js/angular.js')
	script(src="/js/angular-route.js")
	script(src="/js/angular-cookies.js")
	script(src="/js/angular-resource.js")
	script(src="/js/socket.io.js")
	script(src="/js/jquery-1.10.1.js")
	script(src="/js/bootstrap.js")
	script(src="/js/angular-smoothscroll.js")
	script(src="/js/jquery.easing.compatibility.js")
	script(src="/js/jquery.simpleWeather.js")
	script(src="/js/ui-bootstrap-tpls-0.10.0.min.js")
	script(src="/js/bootstrap-switch.js")
	script(src="/travelapp/directives/localWeather.js")
	script(src="/travelapp/directives/inputSwitch.js")
	script(src="/travelapp/directives/equalHeight.js")
	script(src="/travelapp/directives/ng-google-chart.js")
	script(src="/js/i18n-node-angular.js")
	div.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
		div.container
			div.navbar-header
				button(type="button",class="navbar-toggle",data-toggle="collapse",data-target=".navbar-collapse")
					span(class="sr-only") Toggle navigation 
					span(class="icon-bar")
					span(class="icon-bar")
					span(class="icon-bar")
				a(class="navbar-brand",href="#")= __('India Tourism')
			div.collapse.navbar-collapse
				ul.nav.navbar-nav
					li.dropdown
						a(href="",class="dropdown-toggle",data-toggle="dropdown")= __('Places') 
							b(class="caret")
						ul.dropdown-menu
							li(ng-class="{active:getClass('/placesAll')}") 
								a(href="#/placesAll")= __('All Destinations')
							li(ng-class="{active:getClass('/groupedDestinations')}") 
								a(href="#/groupedDestinations")= __('Grouped Destinations')
					li(data-ng-class="{'active':getClass('/orders')}")
						a(href="#/polls")= __('Travel Poll')
					if (_user)
						li.dropdown
							a.dropdown-toggle(data-toggle="dropdown") #{_user.local.email}
								b(class="caret")
							ul.dropdown-menu
								li(ng-class="{active:getClass('#/profile')}") 
									a(href="#/profile")= __('About Me')
								li(ng-class="{active:getClass('/logout')}") 
									a(href="/logout")= __('Logout')
					else
						li.dropdown
							a.dropdown-toggle(data-toggle="dropdown")= __('Login')
								b(class="caret")
							div.dropdown-menu.row-fluid.navbar-inverse
								form.navbar-inverse(action="/login",method="post",style="margin: 0px;padding:5px;",accept-charset="UTF-8")
									div.form-group
										label.sr-only(style="padding:5px;")= __('Email')
										input.form-control(type="text",name="email",placeholder="Email")
									div.form-group
										label.sr-only(style="padding:5px;")= __('Password')
										input.form-control(type="password",name="password",placeholder="Password")
									div.form-group
										div.col-sm-offset-2.col-sm-10.col-md-12.col-md-offset-0.col-lg-12.col-lg-offset-0
											div.checkbox
												label.label= __('Remember me')
												input(type="checkbox",name="rememberme")
									div.form-group
										button.btn.btn-warning(type="submit")= __('Login')
												li(ng-class="{active:getClass('/profile')}")
				ul.nav.navbar-nav.navbar-right
					li.dropdown
						a(href="",class="dropdown-toggle",data-toggle="dropdown") 
							span.glyphicon.glyphicon-flag 
							b(class="caret")
						ul.dropdown-menu
							- each locale in locales
								li(ng-class="{active:getClass('/placesAll')}")
									a(href="/lang/#{locale.locale}") #{locale.language}
										span(class="flag-icon flag-icon-#{locale.flag} pull-right")
							
	div.container
		div.span12(data-ng-view="",style="margin-top: 60px;margin-bottom: 60px")

	#footer.container
		nav.navbar.navbar-default.navbar-fixed-bottom
			div.navbar-inner.navbar-content-center
				div.span12
					ul.nav.nav-pills
						li
							a(href="http://in.linkedin.com/in/tsukhu/") Tarun Sukhu
						li
							a(href="#") About Us
						li
							a(href="") &copy; 2014
	script.
		$.noConflict();
		
		jQuery(document).ready(function($) {
				
				$('.dropdown-menu form').click(function (e)
				{
					e.stopPropagation();
				});
			
			
		});
		
	// App libs
	script(src="/travelapp/travelapp.js")
	script(src="/travelapp/services/travelService.js")
	script(src="/travelapp/config/config.js")
	script(src="/travelapp/controllers/controllers.js")
	script(src="/js/canvasjs.min.js")
	script(src="/travelapp/directives/angularCanvasjs.js")